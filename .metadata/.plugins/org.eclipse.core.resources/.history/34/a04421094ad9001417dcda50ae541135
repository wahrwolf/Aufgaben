import java.util.ArrayList;


public class Term {
	
	private ArrayList<Double> _koeffizienten;
	private ArrayList<Object> _variablen;

	public Term()
	{
		
	}
	
	public double getKoeffizient(int index)
	{
		return _koeffizienten.get(index);
	}
	
	public void setKoeffizient(int index, double value)
	{
		if ( (index >= 0) && (index < _koeffizienten.size() ) )
		{
			_koeffizienten.set(index, value);
		}
		else
		{
			_koeffizienten.add(value);
		}
	}
	
}
